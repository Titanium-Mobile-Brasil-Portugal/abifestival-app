	backgroundColor: Alloy.CFG.festival.ui.tintColor
}

'#tabbedBar[platform=android]': {
	borderRadius: 6,
	borderColor: Alloy.CFG.festival.ui.tintColor,
	selectedButtonColor: Alloy.CFG.festival.ui.tintColor,
	unselectedButtonColor: '#fff', 
	selectedButtonTextColor: '#fff',
	unselectedButtonTextColor: Alloy.CFG.festival.ui.tintColor,
	font: {
		fontWeight: 'bold',
		fontSize: '14'
	}
}

