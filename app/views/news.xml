<Alloy>
	<Window onOpen="onOpen">
		<RightNavButton platform="ios" class="icon-instagram" onClick="openInstagram" />
		<LeftNavButton platform="ios" class="icon-facebook" onClick="openFacebook" />
		
		<Menu platform="android">
			<MenuItem onClick="openInstagram" class="icon-instagram" />
			<MenuItem onClick="openFacebook" class="icon-facebook" />
		</Menu>
		
		<ListView id="list" onItemclick="openNews">
			<RefreshControl id ="refreshControl" platform="ios" onRefreshstart="onPullToRefresh" />
		</ListView>
		
		<ActivityIndicator id="loader" />
	</Window>
</Alloy>
