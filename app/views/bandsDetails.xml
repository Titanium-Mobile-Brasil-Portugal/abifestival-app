<Alloy>
	<Window id="window" onOpen="setupUserInterface">
		<RightNavButton platform="ios" class="icon-favorite" id="fav" onClick="toggleFavorite" />
		
		<Menu platform="android">
			<MenuItem onClick="toggleFavorite" id="fav" class="icon-favorite" />
		</Menu>
		
		<View class="imageMask">
			<ImageView id="image" />
		</View>
		<View class="details">
			<Label id="artist" />
			<Label id="location" />
			<Label id="time" />
		</View>
		<TextArea id="content" />
	</Window>
</Alloy>
